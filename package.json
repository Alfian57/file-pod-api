{
	"name": "file-pod-api",
	"version": "1.0.0",
	"type": "module",
	"description": "A simple file storage API built with Express and TypeScript.",
	"author": "Alfian Gading",
	"repository": "Alfian57/file-pod-api.git",
	"license": "MIT",
	"main": "index.ts",
	"scripts": {
		"build": "tsc && tsup",
		"start:dev": "tsx watch src/index.ts",
		"start:prod": "node dist/index.js",
		"check": "biome check --write",
		"test": "vitest run",
		"test:cov": "vitest run --coverage",
		"prepare": "husky"
	},
	"dependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.4",
		"@prisma/client": "^6.17.1",
		"@prisma/extension-accelerate": "^2.0.2",
		"bcryptjs": "2.4.3",
		"cors": "2.8.5",
		"dotenv": "17.2.1",
		"express": "5.1.0",
		"express-rate-limit": "8.0.1",
		"helmet": "8.1.0",
		"http-status-codes": "2.3.0",
		"jsonwebtoken": "9.0.2",
		"ms": "^2.1.3",
		"multer": "^2.0.2",
		"pino": "9.9.0",
		"pino-http": "10.5.0",
		"swagger-ui-express": "5.0.1",
		"zod": "3.25.76"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@commitlint/cli": "^20.1.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@types/bcryptjs": "2.4.2",
		"@types/cors": "2.8.19",
		"@types/express": "5.0.3",
		"@types/jsonwebtoken": "9.0.2",
		"@types/ms": "^2.1.0",
		"@types/multer": "^2.0.0",
		"@types/supertest": "6.0.3",
		"@types/swagger-ui-express": "4.1.8",
		"@vitest/coverage-v8": "3.2.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.4",
		"pino-pretty": "13.1.1",
		"prisma": "^6.17.1",
		"supertest": "7.1.4",
		"tsup": "8.5.0",
		"tsx": "4.20.4",
		"typescript": "5.9.2",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"outDir": "dist",
		"format": [
			"esm",
			"cjs"
		],
		"target": "es2020",
		"sourcemap": true,
		"clean": true,
		"dts": true,
		"splitting": false,
		"skipNodeModulesBundle": true
	},
	"packageManager": "npm@10.9.3",
	"lint-staged": {
		"*.{ts,js,json}": [
			"biome check --write"
		]
	}
}
